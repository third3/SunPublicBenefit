                })
            })(i)
        }
        //*********************跳转个人中心不同页面的链接代码**********************
        function GotoPartView(actionname, controllerName) {
            $(this).css("background", "#44b549");
            var url = "../" + controllerName + "/" + actionname;
            $.ajax({
                type: "post",
                url: url,
                success: function (data) {
                    //获取到数据后在右侧Content下显示分部视图
                    $('.pt_mod_plate').html(data);
                }
            });
        }
