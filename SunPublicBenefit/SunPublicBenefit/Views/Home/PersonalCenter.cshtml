        </div>
    </div>
    <script type="text/javascript">
        showMsApprove('others_contributions', 'pt_mod_plate');
        function showMsApprove(id, box) {
            $.post("IsApprove", function (data) {
                if (data == "0") {
                    switch (id) {
                        case 'pt_individual_event':
                            $("." + box + "").load("/Approve/AutoUserApprove");
                            break;
                        case 'pt_donation_record':
                            $("." + box + "").load("/Approve/UnBeneficenceApprove");
                            break;
                        case 'pt_contact':
                            $("." + box + "").load("/Approve/BeneficenceApprove");
                            break;
                        case 'pt_myProject':
                            $("." + box + "").load("ApproveWayChoose");
                            break;
                        case 'others_contributions':
                            $("." + box + "").load("/Approve/MyDonationApprove");
                    }
                };
                if (data == "1") {
                    $("." + box + "").load("/Project/SingleProject");
                };
                if (data == "2") {
                    $("." + box + "").load("/Project/UnBeneficenceProject");
                };
                if (data == "3") {
                    $("." + box + "").load("/Project/BeneficenceProject");
                };
            });

        }
    </script>
</body>
</html>