        //****************************点击导航条显示的选中效果********************
        $(".active").eq(0).css({ "background": "#44b549", "color": "#fff" });
        for (var i = 0; i < $(".active").length; i++) {
            (function (i) {
                $(".active").eq(i).click(function () {
                    for(var j=0;j<$(".active").length;j++){
                        $(".active").eq(j).css({"background":"#fff","color":"#4b4b4b"});
                    }
