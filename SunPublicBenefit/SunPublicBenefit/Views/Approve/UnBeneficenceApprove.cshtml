                    provie: $("#province option:selected").text(),//省
                    city: $("#city option:selected").text(),//市 
                    residentAddress: $("#form_input3").val(),//详细地址
                    nature: $("#nature option:selected").text(), //性质
                    annual: $("#annual option:selected").text(),//年募款额
                    fullTime: $("#fullTime option:selected").text(),//全职人数
                    dateTime: $("#form_input4").val(),//时间
                    website: $("#form_input5").val(),//官网
