
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>阳光公益人物</title>
    <link href="~/css/public.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/images/logo .ico" />
    <link href="~/css/figures.css" rel="stylesheet"/>
    <script src="~/Scripts/js/jquery-1.11.3.min.js"></script>
    <script src="~/Scripts/js/figuress.js"></script>
</head>
<body>
    <div>
        <div class="nav" style="box-shadow:0 0 10px 1px #d0d0d0;">
            <div class="nav_menu">
                <div class="nav_lf_title">
                    <div class="nav_lf_tllg"></div>
                </div>
                <ul class="cp_ul">
                    <li class="current">@Html.ActionLink("官网首页", "Index", "Home")</li>
                    <li><a href="#">基金会</a></li>
                    <li>@Html.ActionLink("公益活动", "PublicWelfareActivities", "Approve")</li>
                    <li><a href="#">捐款</a></li>
                    <li><a href="#">@Html.ActionLink("个人中心", "PersonalCenter", "Home")</a></li>
                </ul>
            </div>
        </div>
        <div class="search">
            <div class="search-rg">
                <marquee class="search_marquee" behavior="alternate" scrollamount ="1" behavior="scroll" direction="up" onmouseover=this.stop() onmouseout=this.start()>
                    <p>
                       <a href="">孙恒：摇滚青年的公益人生</a>
                    </p>
                    <p>
                        <a href="">曹明秀：博士后的保姆事业</a>
                    </p>
                    <p>
                        <a href="">包唐韬：绝壁支教老师</a>
                    </p>
                    <p>
                        <a href="">董丹丹：边卖玉米边教课本</a>
                    </p>
                    <p>
                        <a href="">曹大佛：把慈善写在路上</a>
                    </p>
                    <p>
                        <a href="">徐白仑：金钥匙盲童教育工程创始人</a>
                    </p>
                </marquee>
                <form action="/" method="post">
                    <input type="text" placeholder="请输入关键词" />
                    <input type="button" value="搜索" />
                </form>
            </div>
        </div>
        <div class="pb_figures">
            <div class="pb_figures_ct" id="pf_ct">
                <div class="pb_figures_tl">
                    <h2>关于<span style="color:#3a9dea">公益人物</span>新闻</h2>
                </div>
                @* ************新闻人物里面的内容通过检索后台的人物的数据有多少条然后进行添加进HTML中通过AJAX进行后台数据的传输********** *@
                
            </div>
        </div>
        <div class="pageBar">
            <div class="pageBar_ct">
                <ul>
                    <li class="prev" id="prev"><a href="#">上一页</a></li>
                    <li class="reset">
                        @*这里的数量根据分页数追加*@
                    </li>
                    <li class="next" id="next"><a href="#">下一页</a></li>
                </ul>
            </div>
        </div>
        <!-- **************网站底部信息反馈部分************** -->
        <div class="footer">
            <div class="inner">
                <div class="concat_us">
                    <span class="title">联系我们</span>
                    <span>项目合作：XXXX.com</span>
                    <span>媒体合作：XXXX.com</span>
                    <div class="feedback">
                        <a href="">意见反馈</a>|
                        <a href="">网友投诉</a>
                    </div>
                </div>
                <div class="links">
                    <a href="">阳光公益慈善基金会</a>|
                    <a href="">关于阳光公益</a>|
                    <a href="">服务条款</a>|
                    <a href="">广告服务</a>|
                    <a href="">客服中心</a>|
                    <a href="">网站导航</a>
                </div>
                <p class="copyright">Copyright © 1998-2017 Tencent.All Rights Reserved 阳光公益有限公司 版权所有</p>
            </div>
        </div>
    </div>
</body>
</html>
